<div class="container">
    <h4 class="my-5 d-inline-block px-3 ml-5" style="background-color:#eeeeee">注文履歴一覧</h4>

  <table class="table table-bordered">
    <thead class="thead-light">
      <th class="font-weight-normal" width="10%">注文日</th>
      <th class="font-weight-normal" width="50%">配送先</th>
      <th class="font-weight-normal" width="10%">注文商品</th>
      <th class="font-weight-normal" width="8%">支払金額</th>
      <th class="font-weight-normal" width="9%">ステータス</th>
      <th class="font-weight-normal" width="10%">注文詳細</th>
    </thead>
    <tbody>
      <% @orders.each do |order|%>
        <tr>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
          </td>
          <td>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %><br>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td>¥ <%= order.total_payment.to_s(:delimited) %></td>
          <td><%= order.status_i18n %></td>
          <td>
            <%= link_to "表示する", order_path(order.id), class:"btn btn-primary py-1 px-3 mx-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>