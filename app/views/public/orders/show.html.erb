<div class="container">
    <h4 class="d-inline-block px-3 my-5 ml-5" style="background-color:#eeeeee">注文履歴詳細</h4>

  <div class="row">
    <div class="col-6">
      <strong>注文情報</strong>
      <table class="order_table table table-bordered mt-2">
        <tbody>
          <tr>
            <td style="background-color:#eeeeee" height="35">注文日</td>
            <td>
              <%= @order.created_at.strftime('%Y/%m/%d %H:%M') %>
            </td>
          </tr>
          <tr>
            <td style="background-color:#eeeeee"  height="35">配送先</td>
            <td>
              〒 <%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td style="background-color:#eeeeee"  height="35">支払方法</td>
            <td>
                <%= @order.payment_method_i18n %>
            </td>
          </tr>
            <td style="background-color:#eeeeee"  height="35">ステータス</td>
            <td>
                <%= @order.status_i18n %>
            </td>
          </tr>
        <tbody>
      </table>
   </div>
         
    <div class="col-2">
      <strong>請求情報</strong>
      <table class="order_table table table-bordered mt-2">
        <tbody>
          <tr>
            <td style="background-color:#eeeeee" height="35">商品合計</td>
            <td>
              <% @order.order_details.each do |order_detail| %>
                  <% @total_price += order_detail.sub_total %>
                <% end %>
                <%= @total_price.to_s(:delimited) %>
            </td>
          </tr>
          <tr>
            <td style="background-color:#eeeeee"  height="35">配送料</td>
            <td><%= @shopping_cost %></td>
          </tr>
          <tr>
            <td style="background-color:#eeeeee"  height="35">ご請求額</td>
            <td>
              <%= (@total_price + @shopping_cost).to_s(:delimited) %>
            </td>
          </tr>
        <tbody>
      </table>
    </div>
  </div>
  
  <div class="row mt-2 mb-5">
    <div class="col-8">
      <strong>注文内容</strong>
      <table class="table table-bordered vertical-align-middle mt-2" height="10">
        <thead class="thead-light">
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.sub_total.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
</div>