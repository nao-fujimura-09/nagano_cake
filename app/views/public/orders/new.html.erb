<div class="container">
  <div class="row ml-5">
    <h4 class="d-inline-block px-3 my-5 ml-5" style="background-color:#eeeeee">注文情報入力</h4>
  </div>
    
  <%= form_with model: @order, url:orders_comfirm_path, method: :post do |f| %>
    <h4 class="font-weight-bold">支払方法</h4>
    <div class=" pl-5 pb-3">
        <%= f.radio_button :payment_method,Order.payment_methods.key(0),checked: true  %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
    </div>
      
    <h4 class="font-weight-bold">お届け先</h4>
    <div class=" pl-5">
      <%= f.radio_button :address_number, 0 %>
        <%= f.label :address, " ご自身の住所" %><br>
          <p class="pl-4">
            〒<%= current_customer.post_code %>　
            <%= current_customer.address %>
          </p>
      <%= f.radio_button :address_number, 1 %>
        <%= f.label :address, " 登録済み住所から検索" %><br>
          <div class="row pl-4 pb-3">
            <div class="col-6">
              <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address), {include_blank: "選択してください"}, class:"form-control", width:"40%" %>
          </div>
          </div>
      <%= f.radio_button :address_number, 2 %>
        <%= f.label :address, " 新しいお届け先" %><br>
            <div class="row pl-4 pb-3">
              <div class="col-2">
                <%= f.label :郵便番号（ハイフンなし）%>
              </div>
              <div class="col-2">
                <%= f.text_field :postal_code, placeholder:"0000000", class:"form-control" %>
              </div>
              <div class="col-2"></div>
            </div>
            <div class="row pl-4 pb-3">
              <div class="col-2">
                <%= f.label :住所%>
              </div>
              <div class="col-4">
                <%= f.text_field :address, placeholder:"東京都渋谷区佐々木神園町0-0", class:"form-control" %>
              </div>
            </div>
            <div class="row pl-4 pb-3">
              <div class="col-2">
                <%= f.label :宛名%>
              </div>
              <div class="col-2">
                <%= f.text_field :name, placeholder:"令和道子", class:"form-control" %>
              </div>
              <div class="col-2"></div>
            </div>
            <div align="center" class="my-5">
              <%= f.submit "確認画面へ進む", class:"btn btn-primary px-4" %>
            </div>
     
    </div>
  <% end %>

 
</div>