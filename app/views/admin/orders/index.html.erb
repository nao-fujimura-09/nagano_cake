<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h4 class="d-inline-block px-3 mt-5 mb-3" style="background-color:#eeeeee">注文履歴一覧</h4>
        <table class="table">
          <thead class="thead-light">
            <th width="30%">購入日時</th>
            <th width="20%">購入者</th>
            <th width="20%">注文個数</th>
            <th width="30%">注文ステータス</th>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= order.customer.full_name %></td>
              <td>
                <% @order_details.each do |order_detail| %>
                  <%= order_details.amount %>
                <% end%>
              </td>
              <td>
                <%= order.status_i18n %>
              </td>
              </tr>
            <% end %>
          <tbody>
        </table>
    </div>
    <div class="col-3"></div>
  </div>
  <%= paginate @orders, class:"pagination"%>
</div>