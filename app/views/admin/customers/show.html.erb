<div class="container">
  <h4 class="my-5 d-inline-block px-4" style="background-color:#eeeeee">
    <%= @customer.full_name %>さんの会員詳細
  </h4>
  <div class="row ml-5">
  <table class="table table-borderless">
    <thead>
      <th width="15%"></th>
      <th width="85%"></th>
    </thead>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @customer.is_deleted? %>  
              <p class="font-weight-bold" style="color:#d3dd3d3">退会</p>
            <% else %>
              <p class="font-weight-bold" style="color:#32cd32">有効</p>
            <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
  </div>
  <div class="row mb-5">
    <div class="col-2"></div>
    <div class="col-2">
      <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success py-2 px-3 ml-5" %>
    </div>
    <div class="col-3">
      <%= link_to "注文履歴一覧を見る", edit_admin_customer_path, class:"btn btn-primary py-2 px-3" %>  
    </div>
    <div class="col-5"></div>
  </div>
</div>