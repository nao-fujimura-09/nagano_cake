<div class="container m-5">
  <h4 class="m-5 d-inline-block px-3" style="background-color:#eeeeee">ジャンル編集</h4>

  <%= form_with model: [:admin, @genre] do |f| %>
    <div class="row  mb-5" align="center">
      <div class="col-1">
        <div class="form-group">            
          <P>ジャンル名</P>         
        </div>
      </div>
      <div class="col-3">
        <div class="form-group">            
          <%= f.text_field :name, class: 'form-control', placeholder:"ジャンル名" %>
        </div>  
      </div>
      <div class="col-1 align-self-end">
        <div class="form-group">        
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
  
</div>