<div class="container">
  <h4 class="m-5 d-inline-block px-3" style="background-color:#eeeeee">商品新規登録</h4>
  
  <div class="row justify-content-center">

      <%= form_with model: [:admin, @item] do |f| %>
        <table class="item_new_table">
          <tbody>
            <tr class="mb-3">
              <td><%= f.label :商品画像 %></td>
              <td><%= f.file_field :item_image, accept: "image/" %></td>
            </tr>
            <tr>
              <td><%= f.label :商品名 %></td>
              <td><%= f.text_field :name, class: 'form-control', placeholder:"商品名" %></td>
            </tr>
            <tr>
              <td><%= f.label :商品説明 %></td>
              <td><%= f.text_area :introduction, rows: "5%", class: 'form-control', placeholder:"ここに説明文を記述します" %></td>
            </tr>
            <tr>
              <td><%= f.label :ジャンル %></td>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name,  { include_blank: '-- 選択してください --'} %></td>
            </tr>
            <tr>
              <td><%= f.label :税抜価格 %></td>
              <td><%= f.text_field :price, class: 'form-control', placeholder:"1000" %></td>
              <td> 円</td>
            </tr>
            <tr>
              <td><%= f.label :販売ステータス %></td>
              <td>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "販売中" %>　　
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "販売停止中" %>
              </td>
            </tr>
          </tbody>
        </table>
        <div align="center">
          <%= f.submit "新規登録", class: 'btn btn-success py-2 px-5' %>
        </div>
      <% end %>
    
</div>